{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "strict": true,
        "module": "es6",
        "target": "es5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
